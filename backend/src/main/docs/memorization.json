{
  "openapi": "3.0.0",
  "info": {
    "title": "Memorization",
    "description": "API for memorization",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api"
    }
  ],
  "paths": {
    "/memorization/{cardId}": {
      "put": {
        "summary": "암기율 기록하기",
        "description": "특정 카드에 대한 암기율을 기록합니다.",
        "parameters": [
          {
            "name": "cardId",
            "in": "path",
            "description": "암기율을 기록할 카드의 ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "memorizationRate": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "암기율 기록 성공"
          },
          "400": {
            "description": "암기율 기록 실패"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
